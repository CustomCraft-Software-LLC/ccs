{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": false,  // Disable source maps
    "rootDir": "./"      // Set rootDir to the project root or adjust as needed
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
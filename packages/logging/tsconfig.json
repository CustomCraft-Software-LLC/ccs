{
  "compilerOptions": {
    "target": "ES2020",                  // Use a modern target if your environment allows
    "module": "ESNext",                  // Use ESNext for tree-shaking support
    "strict": true,                      // Enable strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true,                // Skips type-checking for libraries, faster build
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,                 // Create declaration files for future use
    "outDir": "./dist",                  // Output directory for compiled files
    "sourceMap": false                   // Disable source maps for production builds
  },
  "exclude": ["node_modules", "dist", "logs", "logs_test", "__tests__"],
  "include": ["src/**/*.ts"]
}
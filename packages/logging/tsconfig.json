{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
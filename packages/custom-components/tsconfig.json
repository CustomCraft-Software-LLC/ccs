{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowImportingTsExtensions": true,
      "emitDeclarationOnly": true, 
      "declaration": true,        
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}